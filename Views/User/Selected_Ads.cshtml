@model List<Ads_Post.Models.Ad>
<body class="nav-md">

    <div class="container body">


        <div class="main_container">

            @{
                Html.RenderPartial("User/Side_Navigation");
            }

            <!-- top navigation -->
            @{
                Html.RenderPartial("User/Top_Navigation");
            }

            <div class="right_col" role="main">
                <div class="row">
                    @foreach (var x in Model)
                    {

                        <div class="col-sm-4" style="padding-top:30px; padding-bottom:15px">

                            <div class="container">

                                <div class="card" style="background-color:white">
                                    <img src="@Url.Content(x.image)" alt="John" style="width:100%">
                                    <h4>@x.title</h4>
                                    <p class="title">@x.description</p>
                                    <div class="row">
                                        <div class="col-md-1"></div>
                                        <div class="col-md-4" align="left">
                                            <h5>Date of Post</h5>
                                        </div>
                                        <div class="col-md-6">
                                            <h5>@x.date_of_post.ToString("dd/MM/yyyy")</h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-1"></div>
                                        <div class="col-md-4" align="left">
                                            <h5>Date of Done</h5>
                                        </div>
                                        <div class="col-md-6">
                                            <h5>@x.date_of_done.ToString("dd/MM/yyyy")</h5>
                                        </div>
                                    </div>
                                    @*<a href="~/User/Select_Post/@x.Id" class="btn btn-primary">Select</a>*@

                                </div>

                            </div>
                        </div>

                    }
                </div>


                <br />

                <!-- footer content -->
                @{
                    Html.RenderPartial("User/Footer");
                }

                <!-- /footer content -->
            </div>



        </div>
    </div>

</body>