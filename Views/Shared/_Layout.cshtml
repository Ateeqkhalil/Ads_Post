<!DOCTYPE html>
@{
    var controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
}

@if (controllerName == "Home")
{
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@ViewBag.Title - My ASP.NET Application</title>

        <link href="~/Content/User/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/Content/User/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/User/css/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/Content/User/css/owl.carousel.min.css" rel="stylesheet" />
        <link href="~/Content/User/css/fontawesome-stars-o.min.css" rel="stylesheet" />
        <link href="~/Content/User/css/style.css" rel="stylesheet" />
        <link href="~/Content/User/css/responsive-style.css" rel="stylesheet" />

        <link href="~/Content/User/css/main.css" rel="stylesheet" />
        <link href="~/Content/User/css/Custom.css" rel="stylesheet" />
    </head>
    <body>
        @RenderBody()

        <div class="container">
            <div id="preloader">

                <div class="row">
                    <div class="col-sm-5"></div>
                    <div class="col-sm-3">
                        <a href="~/Home/Index" class="navbar-brand ">
                            <h1 style="font-weight: bold; color: white; padding-top: 50px">Ads To Earn</h1>
                        </a>
                    </div>
                    <div class="col-sm-4"></div>
                </div>
                <div class="row">
                    <div class="preloader--spinners">

                        <span class="preloader--spinner"></span>  <span class="preloader--spinner"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5"></div>
                    <div class="col-sm-3">
                        <p style="font-weight: bold; color: white; padding-left:5px;padding-top:300px">Your Internet Connection is Slow</p>
                    </div>
                    <div class="col-sm-4"></div>
                </div>
            </div>
        </div>

        <div id="backToTop">
            <a href="#" class="btn btn-lg btn-default active"><i class="fa fa-chevron-up"></i></a>
        </div>

        <script src="~/Content//User/js/jquery.min.js"></script>
        <script src="~/Content/User/js/jquery-3.2.1.min.js"></script>
        <script src="~/Content/User/js/jquery-ui.min.js"></script>
        <script src="~/Content/User/js/jquery.ui.touch-punch.min.js"></script>
        <script src="~/Content/User/js/bootstrap.min.js"></script>
        <script src="~/Content/User/js/jquery.sticky.min.js"></script>
        <script src="~/Content/User/js/owl.carousel.min.js"></script>
        <script src="~/Content/User/js/jquery.waypoints.min.js"></script>
        <script src="~/Content/User/js/jquery.counterup.min.js"></script>
        <script src="~/Content/User/js/jquery.countdown.min.js"></script>
        <script src="~/Content/User/js/jquery.validate.min.js"></script>
        <script src="~/Content/User/js/isotope.min.js"></script>
        <script src="~/Content/User/js/jquery.zoom.min.js"></script>
        <script src="~/Content/User/js/jquery.barrating.min.js"></script>
        @*<script src="~/Content/js/scrollreveal.min.js"></script>*@
        <script src="~/Content/User/js/retina.min.js"></script>
        @*<script src="~/Content/js/color-switcher.min.js"></script>*@
        <script src="~/Content/User/js/main.js"></script>
        @*<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBK9f7sXWmqQ1E-ufRXV3VpXOn_ifKsDuc"></script>*@
            
    </body>
</html>
}


